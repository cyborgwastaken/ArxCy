// Functions
func void greet(name) {
    print("Hello " + name);
}

func int add(int a, int b) {
    return(a + b);
}

// Conditions
if (x > 10) then {
    print("Big number!");
} else-if (x > 5) then {
    print("Medium number!");
} else {
    print("Small number");
}

// For - loop
for(int i = 0; i <= 1; i++){
    print(i);
}

//while - loop
while (x > 10) {
    print(x);
    x--;
}

//do-while
do {
    x++;
} while (x < 10);
