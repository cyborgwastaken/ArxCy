//Variable declaration
int a;
str b;
flt c;
bool d;
char e;

// Variable assignment]
int x = 42;
str y = "Ayush";
flt z = 1.1;
bool u = true;
char v = 'a';

int[] arrInt = {1, 2, 3};
str[] arrStr = {"Apple", "Ball", "Cat"};
flt[] arrFlt = {1.1, 2.2, 3.3};
bool[] arrBool = {true, false, true, false, 0, 1};
